<% @articles.each do |article| %>

<div class="jumbotron">

    <h1><%= link_to article.title, article %></h1>
    <p><%= article.body %></p>

        <%= link_to "Mostrar", article, class: "btn btn-info"%>
        <%= link_to "Editar", edit_article_path(article), class: "btn btn-warning" %>
        <%= link_to "Eliminar #{article.title}", article, class: "btn btn-danger", method: :delete, data: {confirm: "Estas Seguro?"} %>
        <div class= "mt-3">
            <%= link_to "Nuevo Articulo", new_article_path, class: "btn btn-secondary"%>
        </div>
</div>
    
<% end %>