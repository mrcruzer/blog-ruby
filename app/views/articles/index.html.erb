<% @articles.each do |article| %>

    <h1><%= link_to article.title, article %></h1>
    <p><%= article.body %></p>

    <p>
        <%= link_to "Editar", edit_article_path(article) %>
        <%= link_to "Eliminar #{article.title}", article, method: :delete, data: {confirm: "Estas Seguro?"} %>
        
    
    </p>
    
<% end %>