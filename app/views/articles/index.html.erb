<div class="container-fluid">
    <div class="row">
        <% @articles.each do |article| %>
            <div class="col-sm-12 col-md-4 col-lg-4">
                <div class="jumbotron">
                    <h1><%= link_to article.title, article %></h1>
                    <p><%= article.body %></p>

                    <%= link_to "Mostrar", article, class: "btn btn-success"%>
                    <%= link_to "Editar", edit_article_path(article), class: "btn btn-warning" %>
                    <%= link_to "Eliminar", article, method: :delete, data: {confirm: "Estas Seguro?"}, class: "btn btn-danger" %>
                    <div class= "mt-3">
                        <%= link_to "Nuevo Articulo", new_article_path, class: "btn btn-secondary btn-lg btn-block"%>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>