<div class="jumbotron">
    <h1><%= @article.title%></h1>
    <p><%= @article.body%></p>
    <%= link_to "Editar", edit_article_path, class: "btn btn-warning" %>
    <%= link_to "Eliminar", article_path(@article), method: :delete, data: {confirm: "Estas Seguro?"}, class: "btn btn-danger" %>
    <%= link_to 'Atras', root_path, class: "btn btn-info" %>
</div>




