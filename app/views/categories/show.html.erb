<p id="notice"><%= notice %></p>

<style type="text/css" media="screen">
  .jumbotron {
    background: <%= @category.color %> !important ;
  }

</style>


<div class="container-fluid">
  <div class="jumbotron">
    <div class="row">
      <div class="col-md-6 col-sm-6">

       
        <div class="card border-success mb-3" style="max-width: 20rem;">
          <div class="card-header"><h3><strong>Name:</strong></h3></div>
          <div class="card-body">
            <h4 class="card-title"><strong><%= @category.name %></strong></h4>
          </div>
        </div>    
      </div>

      <div class="col-md-6 col-sm-6">
       
        
        <div class="card border-success mb-3" style="max-width: 20rem;">
          <div class="card-header"><h3><strong>Color:</strong></h3></div>
          <div class="card-body">
            <h4 class="card-title"><h5><strong><%= @category.color %></strong><h5></h4>
          </div>
        </div>
      </div>

      <div class="col-md-12 col-sm-12">
       
        <%= link_to 'Edit', edit_category_path(@category), class: "btn btn-warning" %>
        <%= link_to 'Back', categories_path, class: "btn btn-success" %>

      </div>
      
  

    </div>   
  </div>
</div>




