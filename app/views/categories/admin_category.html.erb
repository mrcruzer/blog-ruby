<div class="jumbotron">
<h1>Administrador</h1>
<%= link_to "Normal", categories_path(user_normal:true), class: "btn btn-success mb-3" %>
    <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Titulo:</th>
                    <th>Fecha De Creacion</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="bg-info">
                <% @categories.each do |catego| %>
                    <tr class="text-center">
                        <td ><%= catego.name %></td>
                        <td ><%= catego.created_at.strftime('%b, %d, %Y') %></td>

                        <td>
                            <%= link_to "Ver", catego, class: "btn btn-info text-center"%>
                            <%= link_to "Editar", edit_category_path(catego), class: "btn btn-warning text-center" %>
                            <%= link_to "Eliminar", catego, method: :delete, data: {confirm: "Estas Seguro?"}, class: "btn btn-danger text-center"  %>
                        </td>

                    </tr>
                <% end %>
            </tbody>

    </table>
</div>