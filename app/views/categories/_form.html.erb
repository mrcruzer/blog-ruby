<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 mt-3">
      <div class="jumbotron">
        <h1><%= "#{title} Categoria"%></h1>
        <%= form_with(model: category, local: true) do |form| %>
          <% if category.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

              <ul>
              <% category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group row">
            <h3><%= form.label "Name:", class: "col-md-6 col-form-label"%></h3>
            <%= form.text_field :name, id: :category_name, class:"col-md-6" %>
          </div>

          <div class="form-group row">
            <h3><%= form.label "Color:", class: "col-md-6 col-form-label"%></h3>
            <%= form.text_field :color, id: :category_color, class:"col-md-6" %>
          </div>

          <div class="form-group">
            <%= form.submit "Enviar", class: "btn btn-success btn-lg col-md-3" %>
            <%= link_to 'Atras', @category, class: "btn btn-secondary btn-lg col-md-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
