
<div class="container">
  <div class="row" style="margin-top:20px">
      <div class="col-xs-12 col-sm-8 col-md-8 col-sm-offset-2 col-md-offset-3 mb-5">
        <fieldset>
        <h2>Registrarse</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

        <hr class="colorgraph">
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-lg", placeholder: "Email" %>
        </div>

      <div class="form-group">
        <%= f.label :password, class: "offset-md-1 col-md-2 col-form-label text-right sapce-label-right" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres minimos)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",  class: "form-control input-lg", placeholder: "ContraseÃ±a" %>
     </div>

     <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control input-lg", placeholder: "Confirmar ContraseÃ±a" %>
    </div>

    <div class="row">
      <div class="col-md-4 ml-3">
        <div class="actions">
        <%= f.submit "Registrate", class: "btn btn-success" %>
        </div>
      </div>
      <div class="col-md-4 mr-5">
        <%= render "users/shared/links" %>
      </div>
    </div>

        </fieldset>
        <% end %>
      </div>
  </div>
</div>



  

  

 

